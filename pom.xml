    <commons-cli.version>1.2</commons-cli.version>
    <ks.version>1.5.1</ks.version>
    <rdfpro.version>0.3</rdfpro.version>

    <compiler-plugin.version>3.1</compiler-plugin.version>
    <assembly-plugin.version>2.4</assembly-plugin.version>
    <eclipse-plugin.version>2.9</eclipse-plugin.version>
    <surefire-plugin.version>2.15</surefire-plugin.version>
    <source-plugin.version>2.2.1</source-plugin.version>
    <jar-plugin.version>2.4</jar-plugin.version>
    <wagon.version>2.4</wagon.version>

    <site-plugin.version>3.3</site-plugin.version>
    <project-info-plugin.version>2.7</project-info-plugin.version>
    <taglist-plugin.version>2.4</taglist-plugin.version>
    <surefire-report-plugin.version>2.15</surefire-report-plugin.version>
    <pmd-plugin.version>3.0.1</pmd-plugin.version>
